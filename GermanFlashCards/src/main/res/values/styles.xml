<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="FlashCardTextTitle" parent="@android:style/TextAppearance.Large">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#fff</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="FlashCardTextDescription" parent="@android:style/TextAppearance.Small">
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">#80ffffff</item>
        <item name="android:textStyle">bold</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="FlashCardBackground">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_margin">@dimen/activity_flashcard_margin</item>
        <item name="android:gravity">top</item>
    </style>

    <style name="FlashCardBackgroundFront" parent="FlashCardBackground">
        <item name="android:background">#8Cccffcc</item>
    </style>

    <style name="FlashCardBackgroundBack" parent="FlashCardBackground">
        <item name="android:background">#8Ccc99ff</item>
    </style>



</resources>
